extends layout

block content
    a(href="https://github.com/commadelimited/JSDownloader", target="_blank")
        img(style="position: absolute; top: 0; right: 0; border: 0;", src="https://s3.amazonaws.com/github/ribbons/forkme_right_white_ffffff.png", alt="Fork me on GitHub")

    div(class="container", id="content")
        div#header
            p
                a(href="/")
                    img(src="/img/jsdownloader-logo.gif", title="JSDownloader")

            h2 Download a ZIP of your favorite JSFiddle, JSBin, or CodePen!

        form(action="/download", method="post", class="span8 form-signin")
                p
                    input(type="text", id="source_url", name="source_url", class="input-block-level", placeholder="Enter a JSFiddle, JSBin, or CodePen URL")

                p
                    button DOWNLOAD

        div#messages
            if msg
                h3 #{msg}
                ul.callout
                    li(class="muted")

        div#extras
            h3 Recently Downloaded

            ul.callout

        div#footer
            p
                a(href="http://andymatthews.net", target="_blank") &copy; blog
                a(href="http://twitter.com/commadelimited", target="_blank") @commadelimited on Twitter
                a(href="http://github.com/commadelimited", target="_blank") @commadelimited on Github
